{
  "name": "lbrygen-electron",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build-web": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:setup": "node ./build/downloadDaemon.js",
    "electron:pack": "vue-cli-service electron:build --dir",
    "electron:build-linux": "node ./build/downloadDaemon.js linux && vue-cli-service electron:build --linux",
    "electron:build-windows": "node ./build/downloadDaemon.js windows && vue-cli-service electron:build --win",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "@ionic/vue": "^6.0.0",
    "@ionic/vue-router": "^6.0.0",
    "axios": "^0.21.4",
    "core-js": "^3.8.3",
    "decompress": "^4.2.1",
    "del": "^6.0.0",
    "json-rpc-2.0": "^0.2.18",
    "vue": "^3.2.13",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^13.0.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "vue-cli-plugin-electron-builder": "~2.1.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/no-deprecated-slot-attribute": "off"
    }
  },
  "lbrySettings": {
    "lbrynetDaemonVersion": "0.107.1",
    "lbrynetDaemonUrlTemplate": "https://github.com/lbryio/lbry/releases/download/vDAEMONVER/lbrynet-OSNAME.zip",
    "lbrynetDaemonDir": "static/daemon",
    "lbrynetDaemonFileName": "lbrynet"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
